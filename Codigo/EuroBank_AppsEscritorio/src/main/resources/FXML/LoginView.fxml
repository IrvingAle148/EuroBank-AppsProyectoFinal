<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vista.LoginViewController"
            prefWidth="400" prefHeight="400">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Text text="EuroBank" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <ToggleGroup fx:id="userTypeGroup"/>
            <HBox spacing="20" alignment="CENTER">
                <RadioButton text="Empleado" toggleGroup="$userTypeGroup" selected="true"
                             fx:id="rbEmployee"/>
                <RadioButton text="Cliente" toggleGroup="$userTypeGroup"
                             fx:id="rbClient"/>
            </HBox>

            <GridPane hgap="10" vgap="10">
                <Label text="Correo electrónico:" GridPane.rowIndex="0"
                       GridPane.columnIndex="0"/>
                <TextField fx:id="tfEmail" GridPane.rowIndex="0"
                           GridPane.columnIndex="1"/>

                <Label text="Contraseña:" GridPane.rowIndex="1"
                       GridPane.columnIndex="0"/>
                <PasswordField fx:id="pfPassword" GridPane.rowIndex="1"
                               GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Iniciar Sesión" onAction="#handleLogin"
                    defaultButton="true" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblError" style="-fx-text-fill: red;" visible="false"/>
        </VBox>
    </center>
</BorderPane>