<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controlador.LoginController" prefWidth="400" prefHeight="300">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Text text="EuroBank" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <TextField fx:id="usuarioField" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

                <Label text="Contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <PasswordField fx:id="contrasenaField" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            </GridPane>

            <Button text="Iniciar Sesión" onAction="#handleLogin" defaultButton="true"/>

            <Label fx:id="mensajeError" style="-fx-text-fill: red;" visible="false"/>
        </VBox>
    </center>
</BorderPane>