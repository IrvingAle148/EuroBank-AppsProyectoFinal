<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="vista.ClienteDetailViewController"
      spacing="15" padding="20">

    <HBox spacing="10">
        <Button text="Volver" onAction="#handleBack"/>
        <Button text="Guardar" onAction="#handleSave" fx:id="btnSave"/>
    </HBox>

    <GridPane hgap="10" vgap="10">
        <Label text="RFC/CURP:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="tfRfc" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   editable="false"/>

        <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="tfName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Apellidos:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="tfLastName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Correo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="tfEmail" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Teléfono:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="tfPhone" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Contraseña:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <PasswordField fx:id="pfPassword" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="lblMessage" style="-fx-text-fill: red;" visible="false"/>
</VBox>