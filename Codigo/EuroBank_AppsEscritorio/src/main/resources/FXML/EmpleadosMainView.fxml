<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.eurobank.appsescritorio.views.EmployeeMainViewController">

    <top>
        <MenuBar>
            <Menu text="Archivo">
                <MenuItem text="Cerrar sesión" onAction="#handleLogout"/>
            </Menu>
            <Menu text="Administración">
                <MenuItem text="Clientes" onAction="#showClientManagement"/>
                <MenuItem text="Cuentas" onAction="#showAccountManagement"/>
                <MenuItem text="Empleados" onAction="#showEmployeeManagement"/>
                <MenuItem text="Sucursales" onAction="#showBranchManagement"/>
            </Menu>
            <Menu text="Transacciones">
                <MenuItem text="Depósito" onAction="#showDepositView"/>
                <MenuItem text="Retiro" onAction="#showWithdrawalView"/>
                <MenuItem text="Transferencia" onAction="#showTransferView"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <StackPane fx:id="contentPane">
            <!-- Contenido dinámico se cargará aquí -->
            <VBox alignment="CENTER">
                <Label text="Bienvenido al Sistema EuroBank"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="lblUserInfo" style="-fx-font-size: 14px;"/>
            </VBox>
        </StackPane>
    </center>

    <bottom>
        <Label fx:id="lblStatus" text="Sistema de Gestión Bancaria - EuroBank"/>
    </bottom>
</BorderPane>