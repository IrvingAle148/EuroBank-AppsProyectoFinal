<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="vista.LoginMainViewController" prefWidth="400" prefHeight="400">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Text text="EuroBank" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

            <HBox spacing="20" alignment="CENTER">
                <RadioButton text="Empleado" toggleGroup="$userTypeGroup" selected="true"
                             fx:id="rbEmpleado"/>
                <RadioButton text="Cliente" toggleGroup="$userTypeGroup"
                             fx:id="rbCliente"/>
            </HBox>

            <GridPane hgap="10" vgap="10">
                <Label text="Usuario/Correo:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="tfCorreo" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="pfContrasena" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Iniciar Sesión" onAction="#manejarLogin"
                    defaultButton="true" style="-fx-font-weight: bold;"/>
            <Label fx:id="lblError" style="-fx-text-fill: red;" visible="false"/>
        </VBox>
    </center>
</BorderPane>