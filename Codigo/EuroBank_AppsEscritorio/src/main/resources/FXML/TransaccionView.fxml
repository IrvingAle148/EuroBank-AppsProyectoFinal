<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="vista.TransaccionesViewController"
      spacing="15" padding="20" alignment="TOP_CENTER">

    <Text text="Realizar Transacción" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Tipo de transacción:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbTransactionType" GridPane.rowIndex="0" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="DEPOSITO"/>
                    <String fx:value="RETIRO"/>
                    <String fx:value="TRANSFERENCIA"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="Cuenta origen:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbOriginAccount" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Cuenta destino:" GridPane.rowIndex="2" GridPane.columnIndex="0"
               fx:id="lblDestinationAccount" visible="false"/>
        <ComboBox fx:id="cbDestinationAccount" GridPane.rowIndex="2" GridPane.columnIndex="1"
                  visible="false"/>

        <Label text="Monto:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="tfAmount" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Descripción:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="tfDescription" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Confirmar" onAction="#handleConfirm"
                style="-fx-font-weight: bold; -fx-pref-width: 100;"/>
        <Button text="Cancelar" onAction="#handleCancel"/>
    </HBox>

    <Label fx:id="lblMessage" style="-fx-text-fill: red;" visible="false"/>
</VBox>